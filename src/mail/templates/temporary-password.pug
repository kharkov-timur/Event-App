doctype html
html
    head
        style.
          header, footer {
            height: 40px;
            width: 100%;
            background-color: black;
          }

          p, h2, h3 {
            color: black;
            margin: 10px 0;
          }

          .wrapper {
            width: 100%;
            height: 100%;
            background-color: whitesmoke;
          }

          .confirmedText {
            text-align: center;
            font-size: 18px;
            color: black;
            margin: 0 auto;
            padding: 10px;
            justify-content: center;
          }

          .important {
            font-size: 20px;
            color: cornflowerblue;
            font-weight: bold;
          }

    body
        header
        div.wrapper
            div.confirmedText
                h2 Event App
                p You or someone has requested
                p a password recovery email:
                p.important= email
                h3 Temporary password:
                p.important= password
                p To change the password, enter
                p the new password in your account
        footer
