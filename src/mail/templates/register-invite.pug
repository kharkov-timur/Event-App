doctype html
html
    head
        style.
          header, footer {
            height: 40px;
            width: 100%;
            background-color: black;
          }

          p, h2 {
            color: black;
            margin: 10px 0;
          }

          .wrapper {
            width: 100%;
            height: 100%;
            background-color: whitesmoke;
          }

          .confirmedText {
            text-align: center;
            font-size: 18px;
            color: black;
            margin: 0 auto;
            padding: 10px;
            justify-content: center;
          }

          .confirmed {
            text-align: center;
          }

          button {
            border: none;
            margin: auto auto 20px;
            background-color: cornflowerblue;
            padding: 10px 30px;
            font-size: 18px;
            color: #fff;
            min-width: 120px;
            max-height: 100px;
            height: 48px;
            cursor: pointer;
          }

          a {
            font-size: 18px;
            color: white;
            cursor: pointer;
          }

    body
        header
        div.wrapper
            div.confirmedText
                h2 Event App
                p You have successfully registered
                p Confirm your email:
            div.confirmed
                a(href=`${url}`)
                    button Confirm email
        footer
